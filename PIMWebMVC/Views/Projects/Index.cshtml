@using PIMWebMVC.Resources
@using PIMWebMVC.Constants
@{
    ViewBag.Title = PIMResource.PROJECT_SEARCH_PAGE_TITLE;
    IProjectStatuesConstant projectStatues = new ProjectStatuesConstant();
}
<hr />
<h3>@PIMResource.PROJECT_SEARCH_PAGE_TITLE</h3>
<hr />
<div class="form-horizontal">
    <span hidden id="confirm-delete-message-span">@PIMResource.MESSAGE_CONFIRM_DELETE_PROJECTS</span>
    <p id="missing-criteria-lbl" class="error display-none">@PIMResource.MESSAGE_INVALID_CRITERIA</p>
    <p id="project-number-not-in-range-lbl" class="error display-none">@PIMResource.MESSAGE_PROJECT_NUMBER_NOT_IN_RANGE</p>
    <div class="form-group">
        <div class="col-md-6">
            <label class="control-label col-md-4">@PIMResource.PROJECT_LBL_NUMBER</label>
            <input id="number-search-txt" type="number" min=0 max=2147483647 class="col-md-8 form-control" autofocus />
        </div>
        <div class="col-md-6">
            <label class="control-label col-md-4">@PIMResource.PROJECT_LBL_CUSTOMER</label>
            <input id="customer-search-txt" class="col-md-8 form-control" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-6">
            <label class="control-label col-md-4">@PIMResource.PROJECT_LBL_NAME</label>
            <input id="name-search-txt" class="col-md-8 form-control" />
        </div>
        <div class="col-md-6">
            <label class="control-label col-md-4">@PIMResource.PROJECT_LBL_STATUS</label>
            @Html.DropDownList("status-search-cbb", new SelectList(projectStatues.PROJECT_STATUSES, "key", "value"),
           "", htmlAttributes: new { @class = "form-control", @id = "status-search-cbb" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-5">
        </div>
        <div class="col-md-7">
            <button id="search-projects-btn" name="default-button" class="btn btn-success">@PIMResource.BTN_SEARCH</button>
            <button id="reset-criteria-btn" class="btn btn-warning">@PIMResource.BTN_RESET_SEARCH</button>
        </div>
    </div>
    <div id="projects-search-result">
    </div>
</div>
@Scripts.Render("~/bundles/projectSearch")
<script>
    $(document).ready(function () {
        let createSuccessfullyMsg = '@ViewBag.CREATE_SUCCESS_MESSAGE';
        let updateSuccessfullyMsg = '@ViewBag.UPDATE_SUCCESS_MASSAGE';
        if (createSuccessfullyMsg) {
            showSuccessNotify(createSuccessfullyMsg);
        }
        if (updateSuccessfullyMsg) {
            showSuccessNotify(updateSuccessfullyMsg);
        }
    });
</script>